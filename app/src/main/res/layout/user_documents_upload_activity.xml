<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_upload_documents" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/user_national_card_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_add_a_photo_black_24dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_national_card__title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:text="تصویر کارت ملی"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <!--<TextView
                        android:layout_gravity="right|center_vertical"
                        android:textSize="15sp"
                        android:text="وضعیت: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />-->


                    <TextView
                        android:id="@+id/user_national_card_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="text"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/user_national_card_description_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp" />


                    <ProgressBar
                        android:id="@+id/user_national_card_pb"
                        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateOnly="true" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/license_card_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_add_a_photo_black_24dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/license_card_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:text="تصویر گواهی نامه"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <!--<TextView
                        android:text="وضعیت: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />-->


                    <TextView
                        android:id="@+id/license_card_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="text"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/license_card_description_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text=""
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp" />


                    <ProgressBar
                        android:id="@+id/license_card_pb"
                        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateOnly="true" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/car_pic_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_add_a_photo_black_24dp" />


                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/car_pic_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="تصویر کارت ماشین"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <!--<TextView
                        android:layout_gravity="right"
                        android:text="وضعیت: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />-->


                    <TextView
                        android:id="@+id/car_pic_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="text"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/car_pic_description_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text=""
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp" />


                    <ProgressBar
                        android:id="@+id/car_pic_pb"
                        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateOnly="true" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider">

            </View>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/car_back_pic_iv"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#00000000"
                        android:src="@drawable/ic_add_a_photo_black_24dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/car_back_pic_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="تصویر پشت کارت ماشین"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="وضعیت: " />-->


                    <TextView
                        android:id="@+id/car_back_pic_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="text"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/car_back_pic_description_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text=""
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp" />


                    <ProgressBar
                        android:id="@+id/car_back_pic_pb"
                        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateOnly="true" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider">

            </View>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/image_car_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_add_a_photo_black_24dp" />


                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/image_car_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:text="تصویر کارت ملی"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <!--<TextView
                        android:layout_gravity="right|center_vertical"
                        android:textSize="15sp"
                        android:text="وضعیت: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />-->

                    <TextView
                        android:id="@+id/image_car_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="text"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/image_car_description_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text=""
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp" />


                    <ProgressBar
                        android:id="@+id/image_car_pb"
                        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateOnly="true" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>